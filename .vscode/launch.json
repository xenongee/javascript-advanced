    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Headless",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--headless",
                "--disable-gpu",
                "--remote-debugging-port=9222",
            ]
        }
    ]
}
